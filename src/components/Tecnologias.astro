---
import Database from "./iconos/Database.astro";
import Git from "./iconos/Git.astro";
import Mysql from "./iconos/Mysql.astro";
import Node from "./iconos/Node.astro";
import Php from "./iconos/Php.astro";
import React from "./iconos/React.astro";
import Tailwind from "./iconos/Tailwind.astro";
---

<section class="border-y-2 border-gray-400 border-opacity-25 py-10">
    <h3 class="text-2xl text-center mb-10 uppercase">Tecnologias</h3>
    <div
        class="flex flex-row justify-center lg:justify-between items-center gap-10 text-center flex-wrap pb-10 lg:pb-0"
    >
        <div><React class="w-16 text-naranja" /><p>ReactJs</p></div>
        <div><Node class="w-16 text-naranja" /><p>NodeJs</p></div>
        <div><Git class="w-16 text-naranja" /><p>GIT</p></div>
        <div><Php class="w-16 text-naranja" /><p>PHP</p></div>
        <div><Tailwind class="w-16 text-naranja" />Tailwind</div>
        <div><Mysql class="w-16 text-naranja" /><p>MySql</p></div>
        <div>
            <Database class="w-16 text-naranja" /><p>SQL Server</p>
        </div>
    </div>
</section>
